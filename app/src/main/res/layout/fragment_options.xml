<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_2"
    tools:context=".ui.options.OptionsFragment">

    <com.github.angads25.toggle.widget.LabeledSwitch
        android:id="@+id/mode_switch"
        android:layout_width="160sp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:colorBorder="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@id/photo_switch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed"
        app:textOff="Flag Mode"
        app:textOn="Normal Mode" />

    <com.github.angads25.toggle.widget.LabeledSwitch
        android:id="@+id/photo_switch"
        android:layout_width="160sp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10sp"
        android:textSize="20sp"
        app:colorBorder="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@id/easy_switch"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mode_switch"
        app:textOff="Photo OFF"
        app:textOn="Photo ON" />

    <com.github.angads25.toggle.widget.LabeledSwitch
        android:id="@+id/easy_switch"
        android:layout_width="160sp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        app:colorBorder="@color/colorAccent"
        app:layout_constraintBottom_toTopOf="@id/btn_save"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/photo_switch"
        app:textOff="HARD MODE"
        app:textOn="EASY MODE" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="20sp"
        android:text="@string/save_btn"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/btn_reset"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/easy_switch" />

    <Button
        android:id="@+id/btn_reset"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:text="@string/reset_btn"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_save" />

</androidx.constraintlayout.widget.ConstraintLayout>