<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/eval_background_1"
    android:id="@+id/lll"
    android:orientation="horizontal">
    <!--<androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_detail"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/navy"
        android:elevation="4dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">
            <TextView
                android:id="@+id/eval_txt_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:textSize="18sp"
                android:textAlignment="center"
                android:background="#80FFFFFF"
                android:textColor="@color/black"
                android:textStyle="bold">
            </TextView>
        </ScrollView>
        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="#80FFFFFF"
            android:id="@+id/rg_eval">
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/answer"
                android:buttonTint="@color/black"
                android:id="@+id/Radio_btn_1_eval"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textStyle="bold"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/answer"
                android:buttonTint="@color/black"
                android:id="@+id/Radio_btn_2_eval"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>
            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/answer"
                android:id="@+id/Radio_btn_3_eval"
                android:buttonTint="@color/black"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </RadioGroup>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/next_eval_btn"
            android:text="@string/next">
        </Button>
    </LinearLayout>


</LinearLayout>